<% # the way each document will be viewed in the sidebar list -%>
<div class='panel panel-default'>
  <div class='panel panel-heading'>
    <h3>
      <%= link_to_document document %>
    </h3>
  </div>
  <div class="panel panel-body">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <a href="<%= catalog_path(document.id) %>">
            <img class="thumbnail" src="<%= document.photo_path %>">
          </a>
        </div>
        <div class="col-md-6">
          <%= render :partial => "catalog/index_fields", :locals => {document:document} %>
        </div>
      </div>
    </div>
  </div>
</div>

